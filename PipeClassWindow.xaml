<Window x:Class="JJ_Lurgi_Piping_EB.PipeClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pipe Class – Menu" Height="360" Width="700"
        WindowStartupLocation="CenterOwner" Background="#0B1220">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="12" BorderBrush="#223251" BorderThickness="1" Padding="14" Background="#0B1220">
            <TextBlock x:Name="TxtMenu"
                 FontFamily="Consolas"
                 Foreground="#C7D2FE"
                 FontSize="16"
                 TextWrapping="Wrap"/>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <TextBox x:Name="TxtChoice" Width="140" Height="28" Margin="0,0,12,0" />
            <Button Content="OK" Width="90" Height="28" Click="Ok_Click" Margin="0,0,8,0"/>
            <Button Content="Back" Width="90" Height="28" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
