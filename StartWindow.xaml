<Window x:Class="JJ_Lurgi_Piping_EB.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start"
        Width="920" Height="640"
        MinWidth="820" MinHeight="560"
        SizeToContent="Manual"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#111827"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        KeyDown="StartWindow_KeyDown">

    <!-- Scroll if someone runs on tiny screen or very high DPI -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="24">
        <Border CornerRadius="16" Background="#0B1220" Padding="24"
                BorderBrush="#223251" BorderThickness="1">
            <StackPanel>
                <!-- Header -->
                <TextBlock FontFamily="Consolas"
                           Foreground="#9CDCFE"
                           FontSize="22"
                           TextAlignment="Center"
                           xml:space="preserve">
==================================================
= PIPING PARTS DS &amp; PIPE CLASS GENERATOR         =
= (c) 2025 JJ-Lurgi Engineering                  =
==================================================
                </TextBlock>

                <TextBlock Margin="0,16,0,8"
                           FontFamily="Consolas"
                           Foreground="#C7D2FE"
                           FontSize="18"
                           Text="Please select a module to run:"/>

                <!-- Buttons -->
                <UniformGrid Columns="1" Rows="4" Margin="0,6,0,16">
                    <Button x:Name="BtnMod1" Height="52" Margin="0,8,0,0" Click="BtnMod1_Click">
                        <TextBlock FontFamily="Consolas" FontSize="18" Text="  1. Generate Component Datasheets"/>
                    </Button>
                    <Button x:Name="BtnMod2" Height="52" Margin="0,8,0,0" Click="BtnMod2_Click">
                        <TextBlock FontFamily="Consolas" FontSize="18" Text="  2. Generate Pipe Class Summary"/>
                    </Button>
                    <Button x:Name="BtnMod3" Height="52" Margin="0,8,0,0" Click="BtnMod3_Click">
                        <TextBlock FontFamily="Consolas" FontSize="18" Text="  3. Generate Valve Application Summary"/>
                    </Button>
                    <Button x:Name="BtnQuit" Height="52" Margin="0,8,0,0"
                            Background="#1F2937" Foreground="White"
                            Click="BtnQuit_Click">
                        <TextBlock FontFamily="Consolas" FontSize="18" Text="  4. Quit"/>
                    </Button>
                </UniformGrid>

                <TextBlock FontFamily="Consolas" Foreground="#9CDCFE" FontSize="16"
                           Text="Enter your choice (1-4):" />
                <TextBlock Margin="0,8,0,0" FontFamily="Consolas" Foreground="#93E6A8" FontSize="12"
                           Text="Tip: You can also press keys 1, 2, 3, or 4."/>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>
